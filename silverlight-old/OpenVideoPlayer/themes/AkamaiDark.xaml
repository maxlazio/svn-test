                                            </Grid>
                                        </Button>

                                        <Button ToolTipService.ToolTip="FullScreen" x:Name="buttonFullScreen" Style="{StaticResource BGBlendButton}" VerticalAlignment="Center" Height="24" Width="26" Margin="0,0,61,0" HorizontalAlignment="Right" Grid.Column="1" >
                                            <Border Margin="1,1,0,0" BorderThickness="1,1,1,1" BorderBrush="#FFFFFFFF" Height="13" Width="15" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <Rectangle Height="5" Width="6" Fill="#FFFFFFFF" Stroke="#FFFFFFFF" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2,2,0,0"/>
                                            </Border>
                                        </Button>
                                        <Button x:Name="buttonPlaylistItems" ToolTipService.ToolTip="Playlist Entries" Style="{StaticResource BGBlendButton}" VerticalAlignment="Center" Height="24" Width="26" Margin="0,0,33,0" HorizontalAlignment="Right" Grid.Column="1" >
