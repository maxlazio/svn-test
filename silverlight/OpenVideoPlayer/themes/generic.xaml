    <Style TargetType="Visuals:Box">
        <Setter Property="Foreground" Value="{StaticResource Foreground}" />
        <Setter Property="Background" Value="{StaticResource Background}" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Padding" Value="4" />
        <Setter Property="Opacity" Value=".8" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContentControl">
                    <Border Width="Auto" Height="Auto" BorderThickness="2" Margin="0" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding Foreground}" CornerRadius="6,6,6,6">
                        <Grid x:Name="grid" Margin="{TemplateBinding Padding}">
                            <TextBlock x:Name="text" Margin="4,2,0,0" FontWeight="Bold" Height="Auto" Width="Auto" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="{TemplateBinding Foreground}" FontSize="11" Text=""></TextBlock>
                            <Border Cursor="Hand" x:Name="close" Margin="4,2,2,0" BorderThickness="1" CornerRadius="1"  Height="16" Width="16" VerticalAlignment="Top" HorizontalAlignment="Right">
                                <Border.BorderBrush>
                                    <SolidColorBrush Color="{StaticResource Highlight}" />
                                </Border.BorderBrush>
                                <TextBlock Margin="0" Height="Auto" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Width="Auto" Foreground="{TemplateBinding Foreground}" FontSize="11" Text="x"></TextBlock>
                            </Border><!--BorderBrush="{StaticResource Highlight}"-->
                            <ContentPresenter>
                            </ContentPresenter>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Visuals:ContentLinkEmbedBox">
        <Setter Property="Foreground" Value="{StaticResource Foreground}" />
        <Setter Property="Width" Value="450" />
        <Setter Property="Height" Value="100" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContentControl">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="36" />
                            <RowDefinition Height="36" />
                            <RowDefinition Height="36" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="24" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Link:" Margin="2,0,10,0" Foreground="White" VerticalAlignment="Center"></TextBlock>
                        <TextBox x:Name="linkText" Grid.Column="1" Text="" Width="350" Height="22" IsReadOnly="True"></TextBox>

                        <TextBlock Grid.Row="1" Text="Embed:" Margin="2,0,10,0" Foreground="White" VerticalAlignment="Center"></TextBlock>
                        <TextBox x:Name="embedText" Grid.Row="1" Grid.Column="1" Text="" Height="22" Width="350" IsReadOnly="True"></TextBox>
                        <TextBlock Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" Text="*Use Ctrl-C to copy text" Foreground="White" VerticalAlignment="Center"></TextBlock>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Visuals:TextScrollBox">
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Background" Value="#FF000000" />
        <Setter Property="Foreground" Value="#FFFFFFFF" />
        <Setter Property="Padding" Value="2" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Grid x:Name="RootElement">
                        <Border x:Name="Border" Opacity="1" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="1">
                            <Grid>
                                <Border x:Name="ReadOnlyVisualElement" Opacity="0" Visibility="Collapsed" Background="Transparent" />
                                <Border x:Name="MouseOverBorder" BorderBrush="Transparent" BorderThickness="0">
                                    <ScrollViewer x:Name="ContentElement" BorderThickness="0" IsTabStop="False" Padding="{TemplateBinding Padding}" Foreground="{TemplateBinding Foreground}" />
                                </Border>
                            </Grid>
                        </Border>
                        <Border x:Name="DisabledVisualElement" IsHitTestVisible="False" Opacity="0" Visibility="Collapsed" Background="Transparent" BorderBrush="#A5F7F7F7" BorderThickness="{TemplateBinding BorderThickness}" />
                        <Border Margin="1" x:Name="FocusVisualElement" IsHitTestVisible="False" Opacity="0" Visibility="Collapsed" BorderBrush="#FF6DBDD1" BorderThickness="{TemplateBinding BorderThickness}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Visuals:LogViewer">
        <Setter Property="Foreground" Value="#FFFFFFFF" />
        <Setter Property="Background" Value="{StaticResource Background}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContentControl">
                    <!--<StackPanel Orientation="Vertical">-->
                        <Grid x:Name="grid" Background="{TemplateBinding Background}" Margin="2,2,20,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0" />
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition MinWidth="150" />
                            </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition MinHeight="54"  />
                            <RowDefinition Height="0" />
                        </Grid.RowDefinitions>
                            
                        <Grid x:Name="subGrid" Visibility="Collapsed" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="16" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <TextBlock x:Name="title" Text="Player Logs" FontWeight="Bold" HorizontalAlignment="Center" Grid.Row="0" FontSize="11" />
                            <StackPanel  Grid.Row="1" Orientation="Vertical">
                                <controls:WrapPanel Grid.Row="1" Orientation="Horizontal">
                                <CheckBox x:Name="autoScroll" Content="AutoScroll" Margin="4" Grid.Column="1" Grid.Row="0" IsChecked="True" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="9" />
                                <CheckBox x:Name="translucent" Content="Transparent" Margin="4" Grid.Column="1" Grid.Row="0" IsChecked="True" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="9" />
                            </controls:WrapPanel>
                            <controls:WrapPanel Grid.Row="1" Orientation="Horizontal">
                                <Button Visibility="Collapsed" x:Name="copy" Width="150" Content="Copy to clipboard" Margin="4" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" VerticalAlignment="Top" HorizontalAlignment="Center" />
                                <TextBlock Foreground="White" FontSize="9"  Text="Use Ctrl+C to copy text" HorizontalAlignment="Left" />
                            </controls:WrapPanel>
                                </StackPanel>
                            </Grid>
                            <Button x:Name="showLogs" Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Center" >
                                <Button.Content>
                                    <Path x:Name="path" Stroke="Black" Data="M 3.33066,0.0280228L -3.11993e-008,8.01401L 3.33066,16M 6,0L 2.66934,7.98599L 6,15.972">
                                        <Path.RenderTransform>
                                            <RotateTransform Angle="0" CenterX="3" CenterY="8" />
                                        </Path.RenderTransform>
                                    </Path>
                                </Button.Content>
                            </Button>
                            
                            <TextBlock FontSize="10" Grid.Column="2" x:Name="stats" FontFamily="Consolas[, Courier New]" 
                                       Width="Auto" HorizontalAlignment="Right" VerticalAlignment="Top" 
                                       Height="Auto" Foreground="White" TextAlignment="Right" FontWeight="Normal" Text="" Margin="10,2,0,2"  />

                            <Visuals:TextScrollBox FontSize="9" Grid.Row="1" Grid.ColumnSpan="3" x:Name="text" Visibility="Collapsed" 
                                               Background="{TemplateBinding Background}" Foreground="{TemplateBinding Foreground}" 
                                               HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Visible" 
                                               VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                                               TextWrapping="NoWrap" IsReadOnly="True" Margin="0,5,0,0" />

                    </Grid>
                    <!--</StackPanel>-->
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

