                        <Path x:Name="checkedIcon" Margin="6" Visibility="Collapsed" Stretch="Fill" HorizontalAlignment="Left" VerticalAlignment="Center" Width="11" Height="11" StrokeThickness="2" StrokeLineJoin="Round" Stroke="{TemplateBinding Foreground}" Fill="{TemplateBinding Foreground}" Data="M 1.05625,12.2253L 12.2816,1M 1,1.01251L 12.2253,12.2378"></Path>
                        <TextBlock x:Name="text" MinWidth="60" Opacity="{TemplateBinding Opacity}" Margin="30,6,6,6" Height="Auto" Width="Auto" FontSize="10" Text="Test" VerticalAlignment="Center" Foreground="{TemplateBinding Foreground}" />
