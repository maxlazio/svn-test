    <Style TargetType="Player:OpenVideoPlayerControl">
        <Setter Property="Background" Value="{StaticResource Background}" />
        <Setter Property="Highlight">
            <Setter.Value>
                <SolidColorBrush Color="{StaticResource Highlight}" />
            </Setter.Value>
        </Setter><!--Value="{StaticResource Highlight}" />-->
        <Setter Property="Foreground" Value="{StaticResource Foreground}" />
        <!--<Setter Property="OptionsMenu" Value="{StaticResource menuOpts}" />-->
        <!--<Setter Property="MinWidth" Value="200" />
        <Setter Property="MinHeight" Value="180" />-->
        <Setter Property="Padding" Value="8" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Player:OpenVideoPlayerControl">
                    <Visuals:Screen HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="Auto">
                        <Grid Height="Auto" x:Name="layoutRoot" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="Auto">

                            <Border x:Name="mainBorder" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding Background}" BorderThickness="3,3,3,3" Grid.ColumnSpan="1">
                                <Grid x:Name="mainGrid" Height="Auto" Margin="0,0,0,0" Width="Auto">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" MinHeight="40" />
                                        <RowDefinition Height="32" />
                                        <RowDefinition Height="36" />
                                    </Grid.RowDefinitions>
                                
                                    <Rectangle x:Name="highlightBorder" Stroke="{TemplateBinding Highlight}" Height="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="Auto" Fill="Black" StrokeThickness="3" Grid.RowSpan="2" Margin="0,0,0,2">
                                    </Rectangle>

                                    <!-- THIS IS THE MAIN MEDIA ELEMENT -->
                                    <Grid Grid.Row="0" Grid.RowSpan="2" x:Name="videoArea" Margin="{TemplateBinding Padding}" Height="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="Auto">
                                        <MediaElement Height="Auto" Cursor="Hand" x:Name="mediaElement" Width="Auto" Stretch="Uniform" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  />
                                    </Grid>
                                    
                                    <!-- Closed Captioning Box-->
                                    <TextBlock x:Name="textBlockCaption" Grid.Row="1" Grid.RowSpan="1" Margin="2,2,2,2" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Height="Auto" MaxWidth="320" FontSize="24" Foreground="Gray" TextAlignment="Center" TextWrapping="Wrap" Text="{TemplateBinding CaptionText}" />

                                    <!--<Grid Margin="4,10,10,6" Grid.RowSpan="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition MinWidth="200" />
                                            <ColumnDefinition Width="10" />
                                            <ColumnDefinition MinWidth="200" />
                                        </Grid.ColumnDefinitions>-->

                                        <!-- Log Info Box-->
                                        <!-- Stats Info Box Grid.Column="2" Text="Player Logs (Ctrl+C to Copy)" -->
                                        <Visuals:Box Visibility="Collapsed" Grid.RowSpan="2" Opacity=".6" VerticalAlignment="Top" HorizontalAlignment="Right">
                                               <Visuals:LogViewer x:Name="logViewer" Width="Auto" Height="Auto" Margin="2,4,4,4" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                                        </Visuals:Box>
                                    <!--</Grid>-->

                                    <!---Control BoxHorizontalAlignment="Stretch"Highlight="{TemplateBinding Highlight}"-->
                                    <Visuals:ControlsPanel x:Name="controlBox" Height="36"  VerticalAlignment="Center" Grid.Row="2" />
                                    
                                    <!-- CHAPTERS PANEL -->
                                    <Visuals:Box Visibility="Collapsed" Text="Chapters">
                                        <Visuals:Chapters x:Name="chapters" />
                                    </Visuals:Box>

                                </Grid>
                            </Border>

                            <!-- PLAYLIST ITEMS PANEL-->
                            <Visuals:Box Visibility="Collapsed" Text="Playlist" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,0,32">
                                <Visuals:Playlist x:Name="playlist" Margin="2,20,2,2" />
                            </Visuals:Box>

                            <!-- Paused / Message Box -->
                            <Border x:Name="messageBox" Cursor="Hand" Margin="1,1,1,1" Height="80" 
                                    MinWidth="160" Visibility="Collapsed" BorderThickness="2" BorderBrush="#FFcccccc" 
                                    CornerRadius="10,10,10,10" Background="Black" Opacity="0.5" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Grid>
                                    <TextBlock x:Name="messageBoxText" TextAlignment="Center" TextWrapping="Wrap" HorizontalAlignment="Center" Margin="10,10,10,10" VerticalAlignment="Center" 
                                               Height="Auto" Opacity="0.5" FontSize="18" Foreground="White" FontWeight="Bold" Text="{TemplateBinding MessageText}" />
                                    <Visuals:ContentButtonPlay Foreground="White" Width="40" Height="40" x:Name="playSymbol" />
                                </Grid>
                            </Border>
                            
                            <Visuals:BufferIcon x:Name="bufferIcon" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center" />

                            <!--Link/Embed Box-->
                            <Visuals:Box Visibility="Collapsed">
                                <Visuals:ContentLinkEmbedBox x:Name="linkEmbed" />
                            </Visuals:Box>

                            <!--Menu Style="mainMenu"DefaultItems="{StaticResource mItems}"-->
                            <!--<Visuals:PlayerOptionsMenu x:Name="menuOptions" />-->
                            <Player:Menu x:Name="menuOptions" Visibility="Collapsed" MenuExpandMode="LeftUp">
                                <Player:Menu.Items>
                                    <Player:MenuItem Text="Debug">
                                        <Player:MenuItem.Items>
                                            <Player:MenuItem Text="Statistics" CheckOnClick="True" />
                                            <Player:MenuItem Text="Logs" CheckOnClick="True" />
                                        </Player:MenuItem.Items>
                                    </Player:MenuItem>

                                    <Player:MenuItem Text="Scaling" RadioMode="True">
                                        <Player:MenuItem.Items>
                                            <Player:MenuItem Text="Fit" Tag="Uniform" />
                                            <Player:MenuItem Text="Fill" Tag="UniformToFill" />
                                            <Player:MenuItem Text="Stretch" Tag="Fill" />
                                            <Player:MenuItem Text="Native" Tag="None" />
                                        </Player:MenuItem.Items>
                                    </Player:MenuItem>

                                    <Player:MenuItem Text="Chapters">
                                        <Player:MenuItem.Button>
                                            <Visuals:ContentButtonChapters Margin="3" BorderThickness="1" />
                                        </Player:MenuItem.Button>
                                    </Player:MenuItem>

                                    <Player:MenuItem Text="Playlist">
                                        <Player:MenuItem.Button>
                                            <Visuals:ContentButtonPlaylist Margin="3" BorderThickness="1" />
                                        </Player:MenuItem.Button>
                                    </Player:MenuItem>

                                </Player:Menu.Items>
                            </Player:Menu>


                            <!--Custom Tooltip-->
                            <Canvas Canvas.ZIndex="999" Height="Auto" Canvas.Top="0" Canvas.Left="0" Width="Auto">
                                <Visuals:CustomToolTip x:Name="toolTip" Visibility="Collapsed" />
                            </Canvas>
                        </Grid>
                    </Visuals:Screen>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    
</ResourceDictionary>
