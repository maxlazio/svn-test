<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vsm="clr-namespace:System.Windows;assembly=System.Windows"
    xmlns:Visuals="clr-namespace:org.OpenVideoPlayer.Player.Visuals;assembly=OpenVideoPlayer"
    xmlns:Player="clr-namespace:org.OpenVideoPlayer.Player;assembly=OpenVideoPlayer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
    >
    <!-- 
         Silverlight doesn't yet support Merged Resource Dictionaries so we can't
         include multiple XAML files as templates then select from them during runtime.
         Instead, we provide multiple templates which can be copied to the generic.xaml
         to alter the player skin.  I've only been working on this during the late
         evening hours so I haven't been very motivate to find a way around this.
    -JM <jmutton@akamai-dot-com>
    -->

    <Style TargetType="Visuals:Screen">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Visuals:Screen">
                    <Border x:Name="ChildBorder" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="BGBlendButton" TargetType="Button">
        <Setter Property="Foreground" Value="#FFFFFFFF"/>
        <Setter Property="Padding" Value="3"/>
        <Setter Property="IsEnabled" Value="true" />
        <Setter Property="IsTabStop" Value="true" />
        <Setter Property="BorderThickness" Value=".5"/>
        <Setter Property="BorderBrush">
            <Setter.Value>
                <SolidColorBrush Color="#FFFFFFFF" />
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <vsm:VisualStateManager.VisualStateGroups>
                            <vsm:VisualStateGroup x:Name="CommonStates">
                                <vsm:VisualStateGroup.Transitions>
                                    <vsm:VisualTransition GeneratedDuration="00:00:00.25" To="MouseOver"/>
                                    <vsm:VisualTransition GeneratedDuration="00:00:00.15" To="Pressed"/>
                                </vsm:VisualStateGroup.Transitions>
                                <vsm:VisualState x:Name="Normal"/>
                                <vsm:VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <ColorAnimation Duration="0" Storyboard.TargetName="BackgroundGradient" Storyboard.TargetProperty="Color" To="#FF0395d3"/>
                                    </Storyboard>
                                </vsm:VisualState>
                                <vsm:VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <ColorAnimation Duration="0" Storyboard.TargetName="BackgroundGradient" Storyboard.TargetProperty="Color" To="#FF0395d3"/>
                                    </Storyboard>
                                </vsm:VisualState>
                            </vsm:VisualStateGroup>
                        </vsm:VisualStateManager.VisualStateGroups>
                        <Border x:Name="Background" CornerRadius="3" Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}"/>
                        <Border x:Name="BackgroundAnimation" Opacity="0" CornerRadius="3" Background="#FF448DCA" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}"/>
                        <Border CornerRadius="1.75" BorderThickness="1" Margin="{TemplateBinding BorderThickness}" BorderBrush="#FFFFFFFF">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.0,0">
                                    <GradientStop Color="#FFA3AEB9" Offset="0"/>
                                    <GradientStop x:Name="BackgroundGradient" Color="#FF000000" Offset=".35"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                        <Border x:Name="Highlight" CornerRadius="1.75" Opacity="0" IsHitTestVisible="false" BorderBrush="#FF45D6FA" BorderThickness="1" Margin="{TemplateBinding BorderThickness}" />
                        <ContentPresenter
            x:Name="contentPresenter"
            Content="{TemplateBinding Content}"
            ContentTemplate="{TemplateBinding ContentTemplate}"
            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
            Margin="{TemplateBinding Padding}"/>
                        <Border x:Name="DisabledVisualElement" CornerRadius="3" Background="#A5FFFFFF" Opacity="0" IsHitTestVisible="false" />
                        <Border x:Name="FocusVisualElement" CornerRadius="3" BorderBrush="#FF45D6FA" BorderThickness="1" Visibility="Collapsed" IsHitTestVisible="false" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <!-- BEGIN SLIDER STYLES -->

    <Style x:Key="TimelineSliderStyle" TargetType="Slider">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Slider">
                    <Grid x:Name="Root" Background="#FF333333">
                        <Grid.Resources>
                            <ControlTemplate x:Key="RepeatButtonTemplate">
                                <Grid x:Name="Root" Opacity="0" Background="Transparent"/>
                            </ControlTemplate>
                        </Grid.Resources>
                        <Grid x:Name="HorizontalTemplate" Background="{TemplateBinding Background}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Rectangle Height="10" Margin="5,0,5,0" Grid.Column="0" Grid.ColumnSpan="3" Stroke="{x:Null}" StrokeThickness="{TemplateBinding BorderThickness}" RadiusX="1" RadiusY="1">
                                <Rectangle.Fill>
                                    <LinearGradientBrush EndPoint="57.5,10" StartPoint="57.5,0" MappingMode="Absolute">
                                        <GradientStop Color="#FFE0E0E0"/>
                                        <GradientStop Color="#FF0395D3" Offset="1"/>
                                    </LinearGradientBrush>
                                </Rectangle.Fill>
                            </Rectangle>
                            <RepeatButton x:Name="HorizontalTrackLargeChangeDecreaseRepeatButton" IsTabStop="False" Template="{StaticResource RepeatButtonTemplate}" Grid.Column="0"/>
                            <Rectangle x:Name="LeftTrack" Grid.Column="0" Fill="#00FFFFFF" Cursor="Hand"/>
                            <Thumb Height="18" x:Name="HorizontalThumb" Width="11" IsTabStop="True" Grid.Column="1" Visibility="Collapsed"/>
                            <RepeatButton x:Name="HorizontalTrackLargeChangeIncreaseRepeatButton" IsTabStop="False" Template="{StaticResource RepeatButtonTemplate}" Grid.Column="2"/>
                            <Rectangle x:Name="RightTrack" Grid.Column="2" Fill="#FF333333" Cursor="Hand" Opacity="0.4"/>
                        </Grid>
                        <Grid x:Name="VerticalTemplate" Visibility="Collapsed" Background="{TemplateBinding Background}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Rectangle Margin="0,5,0,5" Width="10" Grid.Row="0" Grid.RowSpan="3" Stroke="{x:Null}" StrokeThickness="{TemplateBinding BorderThickness}" RadiusX="1" RadiusY="1" Fill="#FF0395D3"/>
                            <RepeatButton x:Name="VerticalTrackLargeChangeDecreaseRepeatButton" IsTabStop="False" Template="{StaticResource RepeatButtonTemplate}" Grid.Row="2"/>
                            <Rectangle x:Name="DownTrack" Grid.Row="2" Fill="#00FFFFFF" Cursor="Hand"/>
                            <Thumb Height="11" x:Name="VerticalThumb" Width="18" IsTabStop="True" Grid.Row="1" Visibility="Collapsed"/>
                            <RepeatButton x:Name="VerticalTrackLargeChangeIncreaseRepeatButton" IsTabStop="False" Template="{StaticResource RepeatButtonTemplate}" Grid.Row="0"/>
                            <Rectangle x:Name="UpTrack" Grid.Row="0" Fill="#FF333333" Cursor="Hand" Opacity="0.4"/>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ProgressStyleDeux" TargetType="ProgressBar">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Maximum" Value="100"/>
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ProgressBar">
                    <Grid x:Name="Root">
                        <Border x:Name="ProgressBarTrack" Background="#FF333333" CornerRadius="1"/>
                        <Grid x:Name="ProgressBarRootGrid">
                            <Grid x:Name="IndeterminateRoot" Visibility="Collapsed">
                                <Rectangle x:Name="IndeterminateSolidFill" Opacity="1" RenderTransformOrigin="0.5,0.5" RadiusX="1" RadiusY="1" Fill="{TemplateBinding Foreground}"/>
                                <Rectangle x:Name="IndeterminateGradientFill" Opacity="0.7" RadiusX="1" RadiusY="1" StrokeThickness="0">
                                    <Rectangle.Fill>
                                        <SolidColorBrush Color="#FF333333" />
                                    </Rectangle.Fill>
                                </Rectangle>
                            </Grid>
                            <Grid Margin="1" x:Name="DeterminateRoot">
                                <Rectangle HorizontalAlignment="Left" x:Name="ProgressBarIndicator" RadiusX="1" RadiusY="1" StrokeThickness="0">
                                    <Rectangle.Fill>
                                        <LinearGradientBrush EndPoint="57.5,10" StartPoint="57.5,0" MappingMode="Absolute">
                                            <GradientStop Color="#FFE0E0E0"/>
                                            <GradientStop Color="#FF0395D3" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>
                            </Grid>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <Style x:Key="VolumeSliderStyle" TargetType="Slider">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Slider">
                    <Grid x:Name="Root" Background="#FF333333">
                        <Grid.Resources>
                            <ControlTemplate x:Key="RepeatButtonTemplate">
                                <Grid x:Name="Root" Opacity="0" Background="Transparent"/>
                            </ControlTemplate>
                        </Grid.Resources>
                        <Grid x:Name="HorizontalTemplate" Background="{TemplateBinding Background}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Rectangle Height="10" Margin="5,0,5,0" Grid.Column="0" Grid.ColumnSpan="3" Stroke="{x:Null}" StrokeThickness="{TemplateBinding BorderThickness}" RadiusX="1" RadiusY="1">
                                <Rectangle.Fill>
                                    <LinearGradientBrush EndPoint="57.5,10" StartPoint="57.5,0" MappingMode="Absolute">
                                        <GradientStop Color="#FFE0E0E0"/>
                                        <GradientStop Color="#FF0395D3" Offset="1"/>
                                    </LinearGradientBrush>
                                </Rectangle.Fill>
                            </Rectangle>
                            <RepeatButton x:Name="HorizontalTrackLargeChangeDecreaseRepeatButton" IsTabStop="False" Template="{StaticResource RepeatButtonTemplate}" Grid.Column="0"/>
                            <Rectangle x:Name="LeftTrack" Grid.Column="0" Fill="#00FFFFFF" Cursor="Hand"/>
                            <Thumb Height="18" Width="5" x:Name="HorizontalThumb" IsTabStop="True" Grid.Column="1" Visibility="Visible"/>
                            <RepeatButton x:Name="HorizontalTrackLargeChangeIncreaseRepeatButton" IsTabStop="False" Template="{StaticResource RepeatButtonTemplate}" Grid.Column="2"/>
                            <Rectangle x:Name="RightTrack" Grid.Column="2" Fill="#FF333333" Cursor="Hand" Opacity="0.4"/>
                        </Grid>
                        <Grid x:Name="VerticalTemplate" Visibility="Collapsed" Background="{TemplateBinding Background}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Rectangle Margin="0,5,0,5" Width="10" Grid.Row="0" Grid.RowSpan="3" Stroke="{x:Null}" StrokeThickness="{TemplateBinding BorderThickness}" RadiusX="1" RadiusY="1" Fill="#FF0395D3"/>
                            <RepeatButton x:Name="VerticalTrackLargeChangeDecreaseRepeatButton" IsTabStop="False" Template="{StaticResource RepeatButtonTemplate}" Grid.Row="2"/>
                            <Rectangle x:Name="DownTrack" Grid.Row="2" Fill="#00FFFFFF" Cursor="Hand"/>
                            <Thumb Height="11" x:Name="VerticalThumb" Width="18" IsTabStop="True" Grid.Row="1" Visibility="Collapsed"/>
                            <RepeatButton x:Name="VerticalTrackLargeChangeIncreaseRepeatButton" IsTabStop="False" Template="{StaticResource RepeatButtonTemplate}" Grid.Row="0"/>
                            <Rectangle x:Name="UpTrack" Grid.Row="0" Fill="#FF333333" Cursor="Hand" Opacity="0.4"/>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="QualitySliderStyle" TargetType="Slider">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Slider">
                    <Grid x:Name="Root" Background="#FF333333">
                        <Grid.Resources>
                            <ControlTemplate x:Key="RepeatButtonTemplate">
                                <Grid x:Name="Root" Opacity="0" Background="Transparent"/>
                            </ControlTemplate>
                        </Grid.Resources>
                        <Grid x:Name="HorizontalTemplate" Visibility="Collapsed" Background="{TemplateBinding Background}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Rectangle Height="10" Margin="5,0,5,0" Grid.Column="0" Grid.ColumnSpan="3" Stroke="{x:Null}" StrokeThickness="{TemplateBinding BorderThickness}" RadiusX="1" RadiusY="1">
                                <Rectangle.Fill>
                                    <LinearGradientBrush EndPoint="57.5,10" StartPoint="57.5,0" MappingMode="Absolute">
                                        <GradientStop Color="#FFE0E0E0"/>
                                        <GradientStop Color="#FF0395D3" Offset="1"/>
                                    </LinearGradientBrush>
                                </Rectangle.Fill>
                            </Rectangle>
                            <RepeatButton x:Name="HorizontalTrackLargeChangeDecreaseRepeatButton" IsTabStop="False" Template="{StaticResource RepeatButtonTemplate}" Grid.Column="0"/>
                            <Rectangle x:Name="LeftTrack" Grid.Column="0" Fill="#00FFFFFF" Cursor="Hand"/>
                            <Thumb Height="0" x:Name="HorizontalThumb" Width="0" IsTabStop="False" Grid.Column="1" Visibility="Collapsed"/>
                            <RepeatButton x:Name="HorizontalTrackLargeChangeIncreaseRepeatButton" IsTabStop="False" Template="{StaticResource RepeatButtonTemplate}" Grid.Column="2"/>
                            <Rectangle x:Name="RightTrack" Grid.Column="2" Fill="#FF333333" Cursor="Hand" Opacity="0.4"/>
                        </Grid>
                        <Grid x:Name="VerticalTemplate" Height="30" Visibility="Visible" Background="{TemplateBinding Background}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="15"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="15"/>
                            </Grid.RowDefinitions>
                            <Rectangle Margin="0,5,0,5" Height="30" Width="10" Grid.Row="0" Grid.RowSpan="3" Stroke="{x:Null}" StrokeThickness="{TemplateBinding BorderThickness}" RadiusX="1" RadiusY="1" Fill="#FF0395D3"/>
                            <RepeatButton x:Name="VerticalTrackLargeChangeDecreaseRepeatButton" IsTabStop="False" Template="{StaticResource RepeatButtonTemplate}" Grid.Row="2"/>
                            <Rectangle x:Name="DownTrack" Grid.Row="2" Fill="#00FFFFFF"/>
                            <Thumb Height="0" x:Name="VerticalThumb" Width="0" IsTabStop="False" Grid.Row="1" Visibility="Collapsed"/>
                            <RepeatButton x:Name="VerticalTrackLargeChangeIncreaseRepeatButton" IsTabStop="False" Template="{StaticResource RepeatButtonTemplate}" Grid.Row="0"/>
                            <Rectangle x:Name="UpTrack" Grid.Row="0" Fill="#FF333333" Opacity="0.4"/>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- END SLIDER STYLES -->

    <!-- BEGIN MAIN PLAYER LAYOUT -->

    <Style TargetType="Player:OpenVideoPlayerControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Player:OpenVideoPlayerControl">
                    <Visuals:Screen HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="Auto">
                        <Grid Height="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MinWidth="500" MinHeight="400" Width="Auto">
                            <Grid.Resources>
                                <LinearGradientBrush x:Key="background gradiant" EndPoint="0.5,1" StartPoint="0.5,0">
                                    <LinearGradientBrush.RelativeTransform>
                                        <MatrixTransform/>
                                    </LinearGradientBrush.RelativeTransform>
                                    <LinearGradientBrush.Transform>
                                        <MatrixTransform/>
                                    </LinearGradientBrush.Transform>
                                    <GradientStop Color="#FFB7B7B7"/>
                                    <GradientStop Color="#FFBBBBBB" Offset="1"/>
                                    <GradientStop Color="#FFFFFFFF" Offset="0.42"/>
                                    <GradientStop Color="#FEF5F5F5" Offset="0.888"/>
                                </LinearGradientBrush>
                            </Grid.Resources>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Background="#FF000000" BorderBrush="#FF000000" BorderThickness="3,3,3,3" Grid.ColumnSpan="1">
                                <Grid Height="Auto" Margin="2,2,2,2" Width="Auto">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" MinHeight="250"/>
                                        <RowDefinition Height="32"/>
                                        <RowDefinition Height="32"/>
                                    </Grid.RowDefinitions>
                                    <Rectangle Height="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="Auto" Fill="#FF232323" Stroke="#FF333333" StrokeThickness="3" Grid.RowSpan="2" Margin="0,0,0,3"/>

                                    <!-- THIS IS THE MAIN MEDIA ELEMENT -->
                                    <MediaElement Height="Auto" Margin="8,8,8,8" x:Name="mediaElement" Width="Auto" Grid.Row="0" Stretch="Uniform" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.RowSpan="2"/>

                                    <!-- Closed Captioning Box-->
                                    <TextBlock x:Name="textBlockCaption" Grid.Row="0" Grid.RowSpan="1" Margin="2,2,2,2" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Height="Auto" MaxWidth="320" FontSize="24" Foreground="Gray" TextAlignment="Center" TextWrapping="Wrap" Text="{TemplateBinding CaptionText}" />

                                    <!-- Current Bit-rate Box -->
                                    <TextBlock x:Name="debugBitRateBox" Grid.Row="0" Opacity=".75" Grid.RowSpan="1" Margin="2,2,2,2" HorizontalAlignment="Right" VerticalAlignment="Top" Height="Auto" FontSize="24" Foreground="Gray" TextAlignment="Right"  FontFamily="Courier New" FontWeight="Bold" Text="{TemplateBinding BitRateText}" />

                                 
                                    
                                        <Grid Height="35" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Grid.Row="2" Background="#FF333333">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="128"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- PLAY/PAUSE BUTTON -->
                                        <Button Margin="6,1.667,0,1.333" ToolTipService.ToolTip="Play/Pause" Style="{StaticResource BGBlendButton}" x:Name="buttonPlayPause" Width="54" Height="24" HorizontalAlignment="Left" d:LayoutOverrides="Height" >
                                            <Grid Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Center" Width="Auto">
