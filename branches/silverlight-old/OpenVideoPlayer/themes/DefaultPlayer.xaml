                                                </Grid>
                                                <Grid Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="playToggle" Width="Auto" Visibility="Visible">
                                                    <Path HorizontalAlignment="Center" VerticalAlignment="Center" Width="9" Height="Auto" Canvas.Left="76.4692" Canvas.Top="436.162" Stretch="Fill" Fill="#FFFFFFFF" Data="F1 M 84.51,452.297C 84.2037,452.297 83.9301,452.157 83.7501,451.937L 76.7759,444.963C 76.3669,444.554 76.3669,443.891 76.7759,443.482L 83.7695,436.488L 83.8665,436.402C 84.0389,436.253 84.2638,436.162 84.51,436.162C 85.0522,436.162 85.4918,436.602 85.4918,437.144L 85.4893,437.213L 85.4893,451.246L 85.4918,451.315L 85.4893,451.385L 85.4893,451.406L 85.4876,451.406C 85.4417,451.906 85.0216,452.297 84.51,452.297 Z " RenderTransformOrigin="0.5,0.5" d:LayoutOverrides="HorizontalAlignment">
                                                        <Path.RenderTransform>
                                                            <TransformGroup>
                                                                <ScaleTransform/>
                                                                <SkewTransform/>
                                                                <RotateTransform Angle="-180"/>
                                                                <TranslateTransform/>
                                                            </TransformGroup>
                                                        </Path.RenderTransform>
                                                    </Path>
                                                </Grid>
                                            </Grid>
                                        </Button>

                                        <TextBlock x:Name="textBlockPosition" Text="{TemplateBinding PlaybackPositionText}" MinWidth="64"  Height="12" HorizontalAlignment="Left" Margin="65.334,8.333,0,6.667" Width="46.333" FontSize="8" Foreground="#FFFFFFFF"  />
                                        <TextBlock x:Name="textBlockDuration" Text="{TemplateBinding PlaybackDurationText}" MinWidth="64" HorizontalAlignment="Right" Margin="0,8.333,100,6.667" Width="38.667" FontSize="8" Foreground="#FFFFFFFF" d:LayoutOverrides="Width" Height="12" />

                                        <!-- PROGRESS/BUFFERING/SCRUBBING BARS-->
                                        <Visuals:ScrubberBar x:Name="scrubberBar"            Grid.Row="0" Grid.RowSpan="1" Margin="115,3.5,295,3.5" Value="{TemplateBinding PlaybackPosition}" VerticalAlignment="Stretch" Style="{StaticResource TimelineSliderStyle}" Height="Auto" Grid.ColumnSpan="2" Maximum="{TemplateBinding PlaybackDuration}" />
                                        <Visuals:ProgressBar x:Name="progressBarDownloading" Grid.Row="0" Grid.RowSpan="1" Margin="120,20,300,3.5" Value="{TemplateBinding DownloadPercent}"  DownloadOffset="{TemplateBinding DownloadOffsetPercent}" Style="{StaticResource ProgressStyleDeux}" Height="4" Grid.ColumnSpan="2" Visibility="{TemplateBinding DownloadProgressControlVisibility}" />
                                        <!-- BUFFERING -->
                                        <Grid Grid.Row="0" Grid.RowSpan="1" Visibility="{TemplateBinding BufferingControlVisibility}" >
                                            <Visuals:Thumbnail Width="360" Height="360" Margin="0,0,0,0" Source="{TemplateBinding BufferingImageSource}" />
                                            <!-- NO GOOD PLACE FOR THIS... <ProgressBar x:Name="progressBarBuffering"  Margin="2,2,2,2" Width="180" Height="10" HorizontalAlignment="Center" VerticalAlignment="Center" Value="{TemplateBinding BufferingPercent}"/> -->
                                        </Grid>

                                        <!-- Volume/Mute -->
                                        <Slider Height="24" x:Name="sliderVolume" Width="72" Margin="0,0,-25,0" HorizontalAlignment="Right" VerticalAlignment="Center" d:LayoutOverrides="Width, Height" Style="{StaticResource VolumeSliderStyle}"/>
                                        <Button x:Name="buttonMute" ToolTipService.ToolTip="Mute" Style="{StaticResource BGBlendButton}" Width="26" Margin="0,0,55,0" VerticalAlignment="Center" BorderBrush="#FF000000" Foreground="{x:Null}" HorizontalAlignment="Right" Background="#FF0092FF" Height="24">
                                            <Grid Width="Auto" Height="Auto">
                                                <Path Stretch="Fill" Fill="#FFFFFFFF" Margin="1.387,3.25,1.613,2.75" Data="F1 M 432.308,460.197C 432.308,463.495 430.997,466.487 428.867,468.68L 427.472,467.285C 429.245,465.449 430.336,462.95 430.336,460.197C 430.336,457.371 429.187,454.813 427.331,452.965L 428.726,451.57C 430.939,453.775 432.308,456.826 432.308,460.197 Z M 426.905,460.197C 426.905,458.318 426.141,456.618 424.905,455.39L 425.997,454.299C 427.511,455.806 428.449,457.892 428.449,460.197C 428.449,462.429 427.569,464.456 426.138,465.951L 425.046,464.859C 426.198,463.644 426.905,462.003 426.905,460.197 Z M 418.223,468.285L 413.256,463.317L 410.665,463.317C 410.051,463.317 409.553,462.819 409.553,462.205L 409.553,458.058C 409.553,457.443 410.051,456.945 410.665,456.945L 413.256,456.945L 418.223,451.978C 418.373,451.828 418.555,451.73 418.747,451.683L 419.06,451.635C 420.552,451.635 421.782,454.884 421.959,459.08C 422.346,459.302 422.606,459.719 422.606,460.197C 422.606,460.677 422.343,461.096 421.953,461.317C 421.753,465.441 420.534,468.615 419.06,468.615L 418.95,468.609C 418.686,468.595 418.425,468.487 418.223,468.285 Z "/>
                                            </Grid>
                                        </Button>

                                        <!-- Action Buttons -->
                                        <Button ToolTipService.ToolTip="FullScreen" x:Name="buttonFullScreen" Style="{StaticResource BGBlendButton}" VerticalAlignment="Center" Height="24" Width="26" Margin="0,0,61,0" HorizontalAlignment="Right" Grid.Column="1" >
                                            <Border Margin="1,1,0,0" BorderThickness="1,1,1,1" BorderBrush="#FFFFFFFF" Height="13" Width="15" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <Rectangle Height="5" Width="6" Fill="#FFFFFFFF" Stroke="#FFFFFFFF" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2,2,0,0"/>
                                            </Border>
                                        </Button>
